                    =image_tag("123.png", width: 24, height: 19, class: "icon_font_with_text")
                    %span.service_name レシピランキング
                %li.recipe
                  %a
                    =image_tag("dendou.png", width: 24, height: 19, class: "icon_font_with_text")
                    %span.service_name 殿堂入りレシピ
                %li.recipe
                  %a
                    =image_tag("senmon.png", width: 24, height: 19, class: "icon_font_with_text")
